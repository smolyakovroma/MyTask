<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smolyakov.roman.ru.mytask" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_playlist_add_check_black_24dp"
        android:label="@string/app_name"

        android:theme="@style/AppTheme"
        android:name=".objects.AppContext">
        <activity android:name=".activities.TodoList"
            android:label="@string/title_activity_todo_list"
            android:windowSoftInputMode="stateHidden"  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TodoDetails"
            android:launchMode="singleTop"
            android:windowSoftInputMode="stateHidden"  >
        </activity>
    </application>

</manifest>
